<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_circle_black">

    <LinearLayout
        android:id="@+id/layout_player"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <RelativeLayout
                android:id="@+id/layout_webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_youtube"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/youtube_icon"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_pause_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/black"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <com.turtle.hsun.jumptube.Custom.CustomSeekbar
                android:id="@+id/seekBar_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_repeat_type"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_repeat_none" />

            <ImageView
                android:id="@+id/img_entire_width"
                android:layout_width="40dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@drawable/ic_entire_width" />

            <ImageView
                android:id="@+id/img_fullscreen"
                android:layout_width="40dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fullscreen" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>